# Core Configuration
INOREADER_TOKEN=your_api_token_here
WEBHOOK_URL=https://your-webhook-endpoint.com/hook

# Performance Tuning
WEBHOOK_RATE_LIMIT=0.2
MAX_RETRIES=3
QUEUE_SIZE=1000
ERROR_HISTORY_SIZE=100
BATCH_SIZE=50

# Priority Configuration
BREAKING_NEWS_KEYWORDS=breaking,urgent,alert
TRUSTED_SOURCES=reuters,ap,bloomberg
HIGH_PRIORITY_CATEGORIES=news,finance

# Monitoring
METRICS_PORT=8000
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
STRUCTURED_LOGGING=true
