# API Keys
INOREADER_TOKEN=your_token_here
INOREADER_CLIENT_ID=your_client_id_here
INOREADER_CLIENT_SECRET=your_client_secret_here
INOREADER_REFRESH_TOKEN=your_refresh_token_here

# Airtable Configuration
AIRTABLE_API_KEY=your_key_here
AIRTABLE_BASE_ID=appXXXXXX  # Base ID (starts with 'app')
AIRTABLE_TABLE_NAME=your_table_name  # Name of the table to store content

# Pipeline Configuration
BATCH_SIZE=50  # Number of items to process in each batch
FETCH_INTERVAL=60.0  # Time in seconds between fetch operations
METRICS_PORT=9090  # Port for Prometheus metrics server

# Webhook Configuration
MAKE_WEBHOOK_URL=your_webhook_url_here

# Processing Configuration
RATE_LIMIT=0.2  # Rate limit in seconds between requests
MAX_RETRIES=3
LOG_LEVEL=INFO

# Content Validation
MAX_TITLE_LENGTH=255
MAX_CONTENT_LENGTH=2000

# Notification Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com
MIN_NOTIFICATION_LEVEL=error  # info, warning, error, critical

# Cleanup Configuration
RETENTION_DAYS=30  # Number of days to keep processed items
CLEANUP_INTERVAL_HOURS=24  # How often to run cleanup
