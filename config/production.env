# Production Environment Configuration

# API Keys and Authentication
INOREADER_CLIENT_ID=${INOREADER_CLIENT_ID}
INOREADER_CLIENT_SECRET=${INOREADER_CLIENT_SECRET}
INOREADER_REFRESH_TOKEN=${INOREADER_REFRESH_TOKEN}

# Airtable Configuration
AIRTABLE_API_KEY=${AIRTABLE_API_KEY}
AIRTABLE_BASE_ID=${AIRTABLE_BASE_ID}
AIRTABLE_TABLE_NAME=${AIRTABLE_TABLE_NAME}

# Pipeline Configuration
BATCH_SIZE=100  # Increased for production
FETCH_INTERVAL=300.0  # 5 minutes between fetches
METRICS_PORT=9090

# Processing Configuration
RATE_LIMIT=0.5  # Increased rate limit for production
MAX_RETRIES=5   # More retries in production
LOG_LEVEL=INFO

# Content Validation
MAX_TITLE_LENGTH=255
MAX_CONTENT_LENGTH=2000

# Notification Configuration
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
EMAIL_SMTP_HOST=${EMAIL_SMTP_HOST}
EMAIL_SMTP_PORT=${EMAIL_SMTP_PORT}
EMAIL_USERNAME=${EMAIL_USERNAME}
EMAIL_PASSWORD=${EMAIL_PASSWORD}
EMAIL_RECIPIENTS=${EMAIL_RECIPIENTS}
MIN_NOTIFICATION_LEVEL=warning  # More aggressive notifications in production

# Cleanup Configuration
RETENTION_DAYS=90  # Longer retention in production
CLEANUP_INTERVAL_HOURS=24

# Resource Limits
MAX_QUEUE_SIZE=10000
MAX_MEMORY_MB=1024
MAX_CPU_PERCENT=80
